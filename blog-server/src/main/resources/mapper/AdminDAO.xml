<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whoai.blog.dao.AdminDAO">
    <resultMap id="BaseResultMap" type="com.whoai.blog.entity.Admin">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="account" jdbcType="VARCHAR" property="account"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="permission" jdbcType="INTEGER" property="permission"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, account, `password`, permission, `status`, create_time, update_time
    </sql>
    <select id="checkLogin" parameterType="com.whoai.blog.entity.Admin" resultMap="BaseResultMap">
        select * from tb_admin
        <where>
            account = #{admin.account} and `password` = #{admin.password}
        </where>
    </select>
    <select id="findAll" resultMap="BaseResultMap">
        select * from tb_admin
    </select>
    <update id="updateAdmin" parameterType="com.whoai.blog.entity.Admin">
        update tb_admin
        <set>
            <if test="admin.password!=null">password = #{admin.password},</if>
            <if test="admin.permission!=null">permission = #{admin.permission},</if>
            <if test="admin.status!=null">status = #{admin.status},</if>
        </set>
        <where>
            <if test="admin.id != null">and id = #{admin.id}</if>
        </where>
    </update>
    <insert id="saveAdmin" parameterType="com.whoai.blog.entity.Admin" useGeneratedKeys="true">
        insert into tb_admin
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="admin.account != null">account,create_time,update_time,</if>
            <if test="admin.password != null">`password`,</if>
            <if test="admin.permission != null">permission,</if>
            <if test="admin.status != null">status,</if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="admin.account != null">#{admin.account},NOW(),NOW(),</if>
            <if test="admin.password != null">#{admin.password},</if>
            <if test="admin.permission != null">#{admin.permission,javaType=com.whoai.blog.constant.Permission},</if>
            <if test="admin.status != null">#{admin.status,javaType=com.whoai.blog.constant.Status},</if>
        </trim>
    </insert>
</mapper>